{
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module",
        "allowImportExportEverywhere": false,
        "codeFrame": false,
        "ecmaVersion": 11
    },
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "env": {
        "node": true,
        "jest": true
    },
    "plugins": ["prettier"],
    "rules": {
        "import/first": 0,
        "import/extensions": ["error", { "js": "always" }],
        "semi": 0,
        "prettier/prettier": "error"
    }
}