{
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module",
        "allowImportExportEverywhere": false,
        "codeFrame": false,
        "ecmaVersion": 11
    },
    "extends": "airbnb-base",
    "env": {
        "node": true,
        "jest": true
    },
    "rules": {
        "import/first": 0,
        "import/extensions": ["error", { "js": "always" }],
        "semi": ["error", "never"],
        "linebreak-style": 0,
        "max-len": ["error", { "code": 120 }]
    }
}